{% extends 'base.html.twig' %}

{% block title %}Logs Admin{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto mt-12 p-6 bg-white rounded shadow">
        <h1 class="text-2xl font-bold mb-6">üìù Historique des actions</h1>

        {% if logs is empty %}
            <p class="text-gray-500">Aucun log enregistr√© pour le moment.</p>
        {% else %}
            <table class="w-full table-auto border-collapse">
                <thead>
                    <tr class="bg-gray-100 text-left">
                        <th class="p-3 border-b">Date</th>
                        <th class="p-3 border-b">Action</th>
                        <th class="p-3 border-b">Utilisateur</th>
                        <th class="p-3 border-b">Cible</th>
                        <th class="p-3 border-b">D√©tails</th>
                    </tr>
                </thead>
                <tbody>
                    {% for log in logs %}
                        <tr class="border-b hover:bg-gray-50">
                            <td class="p-3 text-sm text-gray-700">
                                {{ log.date|date('d/m/Y H:i') }}
                            </td>
                            <td class="p-3 text-sm text-gray-800 font-semibold">
                                {{ log.action }}
                            </td>
                            <td class="p-3 text-sm text-gray-700">
                                {% if log.user %}
                                    <a href="{{ path('app_profil_visiteur', { id: log.user.id }) }}"
                                       class="text-blue-600 hover:underline">
                                        {{ log.user.name }}
                                    </a>
                                {% else %}
                                    <span class="italic text-gray-400">Utilisateur supprim√©</span>
                                {% endif %}
                            </td>
                            <td class="p-3 text-sm text-gray-700">
                                {{ log.target ?? '-' }}
                            </td>
                            <td class="p-3 text-sm text-gray-700">
                                {{ log.details ?? '-' }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
